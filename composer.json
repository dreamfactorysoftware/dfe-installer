{
  "name":              "dreamfactory/dfe-installer",
  "description":       "DreamFactory Enterprise(tm) Installer",
  "keywords":          [
    "utility",
    "dreamfactory",
    "enterprise",
    "install"
  ],
  "license":           [
    "proprietary"
  ],
  "authors":           [
    {
      "name":  "Jerry Ablan",
      "email": "jerryablan@dreamfactory.com",
      "role":  "Executive Chef"
    }
  ],
  "support":           {
    "email": "support@dreamfactory.com"
  },
  "minimum-stability": "dev",
  "repositories":      [
    {
      "type": "vcs",
      "url":  "git@github.com:dreamfactorysoftware/dfe-common.git"
    }
  ],
  "require":           {
    "php":                     ">=5.5.9",
    "dreamfactory/dfe-common": "dev-develop as dev-master",
    "dreamfactory/php-utils":  "1.*",
    "laravel/framework":       "5.1.*"
  },
  "require-dev":       {
    "barryvdh/laravel-ide-helper": "~2.0",
    "way/generators":              "~3.0",
    "doctrine/dbal":               "~2.3",
    "fzaninotto/faker":            "~1.4",
    "mockery/mockery":             "0.9.*",
    "phpunit/phpunit":             "~4.0",
    "phpspec/phpspec":             "~2.1"
  },
  "autoload":          {
    "classmap": [
      "database"
    ],
    "psr-4":    {
      "DreamFactory\\Enterprise\\Installer\\": "app/"
    }
  },
  "autoload-dev":      {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "scripts":           {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan ide-helper:generate",
      "php artisan vendor:publish",
      "php artisan optimize"
    ],
    "post-update-cmd":  [
      "php artisan clear-compiled",
      "php artisan ide-helper:generate",
      "php artisan vendor:publish --tag=public --force",
      "php artisan optimize"
    ]
  },
  "config":            {
    "preferred-install": "dist"
  },
  "extra":             {
    "branch-alias": {
      "dev-develop": "1.x-dev"
    }
  }
}

